<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Persistence.ItemEntity" table="item_entity" schema="public" catalog="LibraryManagementSystem">
        <id name="itemEntityId" column="item_entity_id"/>
        <property name="acquisitionDate" column="acquisition_date"/>
        <property name="leased" column="leased"/>
        <property name="available" column="available"/>
        <property name="location" column="location"/>
        <many-to-one name="itemByItemId" class="Persistence.Item">
            <column name="item_id"/>
        </many-to-one>
        <set name="itemLeasesByItemEntityId" inverse="true">
            <key>
                <column name="item_entity_id"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.ItemLease"/>
        </set>
        <set name="itemReturnsByItemEntityId" inverse="true">
            <key>
                <column name="item_entity_id"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.ItemReturn"/>
        </set>
    </class>
</hibernate-mapping>