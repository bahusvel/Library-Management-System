<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Persistence.Book" table="book" schema="public" catalog="LibraryManagementSystem">
        <id name="bookId" column="book_id"/>
        <property name="title" column="title"/>
        <property name="authors" column="authors"/>
        <property name="releaseDate" column="release_date"/>
        <property name="pages" column="pages"/>
        <property name="publisher" column="publisher"/>
        <property name="description" column="description"/>
        <property name="barcode" column="barcode"/>
        <property name="isbn" column="isbn"/>
        <property name="edition" column="edition"/>
        <property name="category" column="category"/>
        <property name="rating" column="rating"/>
        <property name="imageFpath" column="image_fpath"/>
        <property name="summary" column="summary"/>
        <property name="price" column="price"/>
        <set name="bookEntitiesByBookId" inverse="true">
            <key>
                <column name="book_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.BookEntity"/>
        </set>
    </class>
</hibernate-mapping>