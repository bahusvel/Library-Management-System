<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Persistence.Employee" table="employee" schema="public" catalog="LibraryManagementSystem">
        <id name="employeeId" column="employee_id"/>
        <property name="firstname" column="firstname"/>
        <property name="lastname" column="lastname"/>
        <property name="role" column="role"/>
        <set name="bookLeasesByEmployeeId" inverse="true">
            <key>
                <column name="employee_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.BookLease"/>
        </set>
        <set name="bookReturnsByEmployeeId" inverse="true">
            <key>
                <column name="employee_id"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.BookReturn"/>
        </set>
        <set name="itemLeasesByEmployeeId" inverse="true">
            <key>
                <column name="employee_id"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.ItemLease"/>
        </set>
        <set name="itemReturnsByEmployeeId" inverse="true">
            <key>
                <column name="employee_id"/>
            </key>
            <one-to-many not-found="ignore" class="Persistence.ItemReturn"/>
        </set>
    </class>
</hibernate-mapping>